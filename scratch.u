adjacentToFort : Model -> Optional (Text, Fort)
adjacentToFort m =
  case m of
    Model (x,y) forts ->
      f : (Text, Fort) -> Boolean
      f a =
        case a of
          (name, Fort (fx, fy) _) ->
            (abs (toFloat (x - fx)) <= 1.0) && (abs (toFloat (y - fy)) <= 1.0)

      first (filter f (Map.toList forts))

